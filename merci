  <script>
    (function(){
      const pre = document.getElementById('orderRecap');
      const text = localStorage.getItem('yumeko_last_order');

      pre.textContent = (text && text.trim())
        ? text.trim()
        : `Aucun récapitulatif trouvé.

Astuce : assurez-vous que la page de commande enregistre le texte via:
localStorage.setItem('yumeko_last_order', text);
dans la fonction prepareOrderText().`;

      document.getElementById('copyBtn')?.addEventListener('click', async ()=>{
        try{
          await navigator.clipboard.writeText(pre.textContent);
          const btn = document.getElementById('copyBtn');
          const old = btn.textContent; btn.textContent = 'Copié ✔';
          setTimeout(()=> btn.textContent = old, 1200);
        }catch(e){}
      });

      document.getElementById('printBtn')?.addEventListener('click', ()=> window.print());

      // Si ton fichier d’accueil n’est pas "index.html", change la ligne ci-dessous.
      document.getElementById('backBtn').setAttribute('href', 'index.html');
    })();
  </script>
