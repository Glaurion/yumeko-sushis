      <h2>Récapitulatif</h2>
      <pre id="orderRecap">Chargement du récapitulatif…</pre>
    </section>

    <div class="actions">
      <button class="btn btn-ghost" id="copyBtn" type="button">Copier</button>
      <button class="btn btn-ghost" id="printBtn" type="button">Imprimer</button>
      <a class="btn btn-primary" id="backBtn" href="index.html">← Retour au menu</a>
